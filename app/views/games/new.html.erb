<h1>New Game</h1>
<%= @letters %>
<div>What is the longest word you can find?</div>
<form action="/score" method="POST" data-turbo="false">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <%= hidden_field_tag :letters, @letters %>
  <div class="input-group mb-3">
    <input type="text" name="word" class="form-control" aria-describedby="button-addon2">
    <input type="submit" class="btn btn-outline-primary" value="Play">
  </div>
</form>